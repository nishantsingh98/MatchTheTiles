<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gameLevels.EasyGameFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/easyGame_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recycler_view_item" />

    <TextView
        android:id="@+id/textView_easy_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_easy_play_again"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/enjoy"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_easy_play_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00796B"
        android:text="@string/play_again"
        android:textSize="40sp" />

</RelativeLayout>